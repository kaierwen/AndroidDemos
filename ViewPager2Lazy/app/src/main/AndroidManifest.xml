<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="github.kaierwen.android.viewpager2lazy">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ViewPager2Lazy">
        <activity
            android:name=".ui.compose.ComposeBottomNavigationBarActivity"
            android:exported="true"
            android:label="@string/title_activity_compose_bottom_navigation_bar"
            android:theme="@style/Theme.ViewPager2Lazy.NoActionBar" />
        <activity
            android:name=".ui.tablayout_viewpager2_fragment.TabLayoutViewPager2FragmentActivity"
            android:exported="true"
            android:label="@string/title_activity_top_tab"
            android:theme="@style/Theme.ViewPager2Lazy.NoActionBar" />
        <activity
            android:name=".ui.tablayout_viewpager_fragment.TabLayoutViewPagerFragmentActivity"
            android:exported="true"
            android:label="@string/title_activity_bottom_navigation" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>